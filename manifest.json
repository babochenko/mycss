{
  "manifest_version": 3,
  "name": "MyCSS",
  "version": "1.0",
  "description": "Unclutters websites with custom CSS injections",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["./youtube.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://calendar.google.com/*"],
      "css": ["./gcal.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://x.com/*"],
      "css": ["./x.css"],
      "run_at": "document_idle"
    }
  ]
}
